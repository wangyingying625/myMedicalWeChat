/* miniprogram/pages/geRen/geRen.wxss */

text{
  color: #676767;
}
.img{
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 35rpx;
}
.forText{
  text-align: center;
}
.img image{
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  border: 8rpx #66c7ce solid;
  display: block;
  margin-bottom: 10rpx;
}
.msg{
  margin: 0;
  margin-top: -15rpx;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box{
  width: 90%;
  padding: 20rpx 0;
  border-top: 6rpx #bfbfbf solid;
  border-bottom: 6rpx #bfbfbf solid;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx
}
.left{
  margin-right: 30rpx;
}
.box text{
  font-size: 33rpx;
  line-height: 2;
}
.butBox{
  height: 470rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload,.change{
  height: 360rpx;
  width: 280rpx;
  box-sizing: border-box;
}
.upload{
  margin-right: 50rpx;
}
.change{
  margin-left: 50rpx;
}
.butBox image,.change image{
  width: 220rpx;
  height: 220rpx;
  padding: 30rpx;
  border: 6rpx #b3dde0 solid;
}
.forButText{
  text-align: center
}